# NBS YouTube Bot - Environment Variables (Production)
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to Git!

# Database
DATABASE_URL="postgresql://username:password@db:5432/dbname?schema=public"
POSTGRES_URL="postgresql://username:password@db:5432/dbname?schema=public"
PRISMA_DATABASE_URL="postgresql://username:password@db:5432/dbname?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="https://your-domain.com"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# YouTube API
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CHANNEL_ID="your-channel-id"
YOUTUBE_OAUTH_REFRESH_TOKEN="your-refresh-token"

# AI (OpenAI)
AI_API_KEY="your-openai-api-key"
AI_TRANSCRIPT_API_KEY="your-openai-api-key"
AI_MODEL="gpt-4"
AI_TRANSCRIPT_MODEL="gpt-4"

# Token Encryption
TOKEN_ENCRYPTION_KEY="your-64-character-hex-token-encryption-key"

# ShortLink Service (Internal Docker Network)
SHORTLINK_API_URL="http://shortlink-app:8080"
SHORTLINK_API_KEY="your-shortlink-api-key"
SHORTLINK_AFFILIATE_ID="your-affiliate-id"
SHORTLINK_BATCH_SIZE="1000"
SHORTLINK_DELAY_MINUTES="5"
